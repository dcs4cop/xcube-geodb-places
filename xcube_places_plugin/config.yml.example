# adapt to your needs and save as config.yml

GeoDBConf:
  # PostgrestUrl, PostgrestPort, ClientId, ClientSecret and AuthDomain can also be provided as environment variables.
  # Environment variables have precedence over the config file.
  PostgrestUrl:  https://xcube-geodb.brockmann-consult.de
  PostgrestPort: 443
  ClientId:      <your_client_id>
  ClientSecret:  <your_client_secret>
  AuthDomain:    https://xcube-users.brockmann-consult.de/api/v2
  PlaceGroups:
    - PlaceGroup:
      Identifier: <place_group_identifier>
      Title: <place_group_title>
      Query: collection-name?limit=100&depth=gt.10&select=list,of,columns
      DatasetRefs:  # place groups are only relevant for those datasets listed here
      - <some_dataset>
      PropertyMapping:
        Label: column-name
        Color: red
        Description: my-property
